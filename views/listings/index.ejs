<% layout('/layouts/boilerplate') -%>

    <body>

        <div class="row" style="justify-content: center;">

            <% allListing.forEach((lists)=>{ %>
                <div class="card col-lg-3 col-md-6 col-sm-12">
                    <a href="/listings/<%= lists._id %>">
                        <img src="<%= lists.image.url %>" class="card-img-top" alt="..." style="height: 16rem"
                            style="width:auto;">
                    </a>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= lists.title %> <br>
                                    &#8377;<%= lists.price.toLocaleString("en-IN") %>
                            </b>/night
                        </p>
                    </div>
                </div>
                <% }) %>

        </div>
        <!-- Create new listings -->
        <center>
            <form action="listings/new" method="get">
                <button class="btn btn-outline-warning btn-lg mb-3">
                    Create New
                </button>
            </form>
        </center>
    </body>